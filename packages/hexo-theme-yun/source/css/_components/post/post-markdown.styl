// override
// https://github.com/YunYouJun/star-markdown-css
.markdown-body {
  color: var(--hty-text-color);
  font-weight: $font-family-sans-serif-weight;
  font-family: $font-family-sans-serif;

  code, pre {
    font-family: $font-family-monospace;
  }

  blockquote {
    padding: 0.6rem 1rem;
    border-left: 4px solid var(--blockquote-border-left-color, --smc-border-color);
    background-color: var(--blockquote-bg-color, rgba($colors.primary, 0.05));

    p {
      margin: 0;
    }
  }

  video {
    width: 100%;
    // fix https:// github.com/YunYouJun/hexo-theme-yun/issues/208
    max-height: 100vh;
  }

  iframe {
    border: none;
  }
}
