.post-toc {
  line-height: 1.8;
  padding: 1rem;
  font-size: 1.1rem;
  font-family: $font-family-serif;

  ol {
    list-style: none;
    text-align: left;
    padding-left: 1rem;
    margin: 0;

    .toc-link {
      color: var(--smc-link-color);

      &:hover {
        color: $colors.danger;
      }
    }

    .toc-number {
      font-family: $font-family-monospace;
    }

    .toc-child {
      font-size: 1rem;

      if (hexo-config('toc.collapse')) {
        overflow: hidden;
        transition: max-height 0.6s ease-in;
        max-height: 0;
      }
    }

    .toc-item {
      &.active {
        &>.toc-link {
          color: $orange;
          border-bottom: 1px solid $orange;
        }

        &>.toc-child {
          max-height: 10000px;
        }
      }
    }
  }
}
