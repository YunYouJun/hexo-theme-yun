
// waline
if (hexo-config('waline.enable')) {
  #waline {
    --waline-color: var(--hty-text-color);
    --waline-theme-color: $colors.primary;
    --waline-active-color: rgba($colors.primary, 0.8);
  }

  html.dark {
    /* for waline */
    /* 布局颜色 */
    --waline-text-color: #888;
    --waline-bgcolor: #1e1e1e;
    --waline-bgcolor-light: #272727;
    --waline-border-color: #333;
    --waline-disable-bgcolor: #444;
    --waline-disable-color: #999;
    /* 特殊颜色 */
    --waline-bq-color: #272727;
    /* 其他颜色 */
    --waline-info-bgcolor: #272727;
    --waline-info-color: #666;
  }
}

#comment {
  margin: 0 1rem;
  padding: 1rem;
  background-color: var(--post-block-bg-color);

  +mobile() {
    margin: 0;
  }
}

.comment-tooltip {
  font-size: 0.8rem;
  color: var(--hty-text-color);
  padding: 0.5rem;
  border: 1px solid #f0f0f0;
  margin-bottom: 1rem;
}

#github-issues {
  margin: 1rem;
}
