footer#footer.sidebar-translate
  if theme.footer.beian.enable
    .beian
      a(rel='noopener' href='https://beian.miit.gov.cn/' target='_blank') #{theme.footer.beian.icp}

  .copyright
    - var nowYear = date(Date.now(), "YYYY")
    span
      | &copy; 
      if theme.footer.since && theme.footer.since != nowYear
        | #{theme.footer.since} – 
      | #{nowYear} 
    
    if theme.footer.icon.url
      a#animate.with-love(href=theme.footer.icon.url, title=theme.footer.icon.title)
        +icon(theme.footer.icon.name, 20)
    else
      span#animate.with-love(title=theme.footer.icon.title)
        +icon(theme.footer.icon.name, 20)
    span.author  #{config.author}

  if theme.footer.powered.enable
    .powered
      span!= __('footer.powered', '<a href="https://hexo.io" target="_blank" rel="noopener">Hexo</a>') + ' v' + hexo_env('version')
      span.footer-separator |
      span= __('footer.theme') + ' - '
        a(rel='noopener' href='https://github.com/YunYouJun/hexo-theme-yun' target='_blank')
          span Yun
        |  v#{yun_env('version')}

  if theme.footer.live_time.enable
    .live_time
      span!=theme.footer.live_time.prefix
      span#display_live_time
      if theme.footer.live_time.suffix
        span.moe-text!=theme.footer.live_time.suffix
      script.
        function blog_live_time() {
          setTimeout(blog_live_time, 1000);
          const start = new Date('#{theme.footer.live_time.start_time}');
          const now = new Date();
          const timeDiff = (now.getTime() - start.getTime());
          const msPerMinute = 60 * 1000;
          const msPerHour = 60 * msPerMinute;
          const msPerDay = 24 * msPerHour;
          const passDay = Math.floor(timeDiff / msPerDay);
          const passHour = Math.floor((timeDiff % msPerDay) / 60 / 60 / 1000);
          const passMinute = Math.floor((timeDiff % msPerHour) / 60 / 1000);
          const passSecond = Math.floor((timeDiff % msPerMinute) / 1000);
          display_live_time.innerHTML = " " + passDay + " 天 " + passHour + " 小时 " + passMinute + " 分 " + passSecond + " 秒";
        }
        blog_live_time();

  if theme.busuanzi.enable
    include ../_third-party/analytics/busuanzi.pug

  if theme.footer.custom_text
    .footer-custom-text!=`${theme.footer.custom_text}`
  if theme.footer.support && theme.footer.support.enable
    .footer-support
      span=theme.footer.support.prefix
      a.footer-support-logo(href=theme.footer.support.link, target="blank", title=theme.footer.support.title)
        if theme.footer.support.logo
          img(height=30, src=theme.footer.support.logo alt=theme.footer.support.title)
        else
          span=theme.footer.support.title
      span=theme.footer.support.suffix
