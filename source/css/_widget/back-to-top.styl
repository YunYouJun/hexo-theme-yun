#go-up {
  position: fixed;
  right: -0.9rem;
  bottom: 1.1rem;
  z-index: $go-up-btn-z-index;
  opacity: 0;
  cursor: pointer;
  color: $colors.primary;
  the-transition();

  &.show {
    transform: translateX(-30px) rotate(360deg);
    opacity: 1;
  }

  .icon {
    width: 2.5rem;
    height: 2.5rem;
  }
}