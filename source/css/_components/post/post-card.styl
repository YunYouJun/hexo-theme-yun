.post-card {
  position: relative;
  max-width: 900px;
  margin: 0 auto;
  the-transition();
  background-color: rgba(white, 0.8);
  box-shadow: 0 1px 8px rgba(white, 0.1);

  &:hover {
    box-shadow: 0 1px 10px rgba(black, 0.08);
  }

  &-header {
    padding-top: 0.5rem;
  }

  &-excerpt, &-excerpt p {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: left;
  }

  &-content {
    padding: 0.5rem 1rem;
  }

  &-title {
    margin: 0;
  }

  &__actions {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  &-tag {
    display: flex;
    flex-grow: 1;
    justify-content: flex-end;
  }

  &-tag, &-category {
    font-size: 0.8rem;

    span {
      color: $dark;

      &:hover {
        color: $colors.primary;
      }
    }

    .icon {
      width: 0.8rem;
      height: 0.8rem;
    }
  }

  &-readmore {
    margin: 1rem auto;

    button {
      border-radius: 0;
    }
  }

  img {
    padding: 5px;
    margin: 5px;
    max-width: 92%;
    max-height: 888px;
    border: 1px solid $light-gray;
    border-radius: 5px;
    the-transition();

    &:hover {
      box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.1);
    }
  }

  .yuque-button {
    --hty-primary: $color-yuque;

    &:hover {
      background-color: alpha($green, 0.9);
    }
  }

  .yuque {
    &-link {
      color: $color-yuque;
    }
  }

  .bilibili {
    &-link {
      color: $color-bilibili;

      .icon {
        width: 2rem;
        height: 2rem;
        margin-bottom: -0.2rem;
      }
    }

    &-button {
      --hty-primary: $color-bilibili;
      background-color: alpha($color-bilibili, 0.9);
    }
  }
}
