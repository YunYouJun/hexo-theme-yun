#reward-container {
  padding: 1rem 0;
  margin: auto;
  text-align: center;
}

#reward-button {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 2.5rem;
  height: 2.5rem;
  // RMB color
  color: #DF667F;
  border-radius: 100%;

  .icon {
    width: 1.2rem;
    height: 1.2rem;
  }
}

#reward-comment {
  margin-top: 0.5rem;
}

#qr {
  img {
    width: 10rem;
    height: 10rem;
    display: inline-block;
    margin: 1rem 1rem 0 1rem;
    padding: 5px;
    border: 1px solid $light-gray;
    border-radius: 5px;
    the-transition();
    the-box-shadow();
  }

  .icon {
    width: 1.5rem;
    height: 1.5rem;
  }
}
